const PI = Math.PI;

var r = parseFloat("4 home 15.00")
document.getElementById("value").innerHTML = r;

var r, PI;
r = 4; //շառավիղ
PI = r * 2; //տրամագիծ
P = 3.14; //շրջանագիծ
Pr = (P * r) * 2;
document.getElementById("value").innerHTML = Pr;

